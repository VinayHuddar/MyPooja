<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.mypooja.androidapp.FindPujari.View.PujariListing.PujariListingScreen">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_actionbar"
            layout="@layout/toolbar_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/layout_loading_message" android:id="@+id/loading_message"/>

            <ListView android:id="@+id/PujarisListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/white"
                android:dividerHeight="1dp"
                android:divider="@color/grey_shade_2"/>

        </FrameLayout>
    </LinearLayout>

    <com.mypooja.androidapp.Common.View.ScrimInsetsFrameLayout
        android:id="@+id/scrimInsetsFrameLayout"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        app:insetForeground="#4000"
        android:elevation="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <fragment
            android:id="@+id/fragment_drawer"
            android:name="com.mypooja.androidapp.Common.View.NavigationDrawerFragment"
            android:layout_width="@dimen/navigation_drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layout="@layout/fragment_navigation_drawer"/>
    </com.mypooja.androidapp.Common.View.ScrimInsetsFrameLayout>

    <com.mypooja.androidapp.Common.View.ScrimInsetsFrameLayout
        android:id="@+id/scrimInsetsFrameLayout_filter"
        android:layout_width="@dimen/pujaris_filter_drawer_width"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_gravity="end"
        app:insetForeground="#4000"
        android:elevation="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <fragment
            android:id="@+id/fragment_filter_drawer"
            android:name="com.mypooja.androidapp.FindPujari.View.PujariListing.PujariFilterDrawerFragment"
            android:layout_width="@dimen/pujaris_filter_drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:layout="@layout/fragment_pujaris_filter_drawer"/>

    </com.mypooja.androidapp.Common.View.ScrimInsetsFrameLayout>
</android.support.v4.widget.DrawerLayout>
